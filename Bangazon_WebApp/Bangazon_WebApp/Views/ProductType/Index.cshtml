@*
    Author: Erin Agobert
    Purpose: View displays list of existing product categories with hyperlinks to related products list
*@

@model IEnumerable<Bangazon_WebApp.Models.ProductType>

@{
    ViewData["Title"] = "Product Category List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="ProductListByCategory" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Name) </a>
                </td>

            </tr>
        }
    </tbody>
</table>
